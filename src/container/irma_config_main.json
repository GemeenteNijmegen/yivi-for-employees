{
  "schemes_path": "/storage/irma/irma_configuration",
  "disable_schemes_update": false,
  "privkeys": "/storage/irma/privatekeys",
  "schemes_update": 60,
  "url": "IRMA_GW_URL",
  "DisableTLS": true,
  "EnableSSE": false,
  "quiet": false,
  "log_json": true,
  "production": true,
  "email": "devops@nijmegen.nl",
  "no_email": "false",
  "disclose_perms": [
    "pbdf.nijmegen.*",
    "pbdf.gemeente.*"
  ],
  "sign_perms": [
    "pbdf.nijmegen.*"
  ],
  "issue_perms": [
    "pbdf.nijmegen.*"
  ],
  "no_auth": false,
  "port": 8080,
  "requestors": {
    "irmaapp": {
      "auth_method": "token",
      "key": "IRMA_TOKEN"
    }
  },
  "max_request_age": 300
}