{{>header}}
<link rel="stylesheet" href="static/styles/yivi.min.css">

<main>
    <!-- START: template component(s) -->
    <div class="container" id="section-1">
        <div class="row">
            <div class="col-12">
                <h1>{{title}}</h1>
                <p class="lead">Scan de QR code met de Yivi app en toon aan dat je een medewerker bent.</p>
                    {{#error}}
                    <div class="error"> 
                        <h1>Er is iets fout gegaan</h1>
                        <p class="lead">{{error}}</p>
                    </div>
                    {{/error}}
                    <div id="yivi-web-form"></div>
                    <a id="retry-button" href="" class="btn btn-primary waves-effect waves-light display-table hidden">Opnieuw proberen</a>
            </div>
        </div>
    </div>

    <!-- END: template component(s) -->
</main>


<!-- Pass parameters to JS -->
<span id="yiviServer" data="{{{yiviServer}}}" ></span>
<span id="yiviFullSession" data="{{{yiviFullSession}}}" ></span>
<!-- Load yivi and page JS -->
<script src="static/scripts/yivi.js"></script>
<script src="static/scripts/disclose.js"></script>

{{>footer}}
